<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h1><%= @cocktail.name %></h1>

      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> of <%= dose.ingredient.name %></p>
      <% end %>
      <div class="row">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit %>
      <% end %>
      </div>

      <%= link_to "Back to Mr. Cocktail", cocktails_path %>
    </div>
  </div>
</div>

