<div class="container">

  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 card-container">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card" style="background-image: url(<%= cl_image_path cocktail.photo.path, width: 300, height: 600 %>);">

          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <p></p>
          </div>

        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>



