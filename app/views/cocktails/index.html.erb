<div class="container">
  <h1>Hello Mr Cocktail</h1>
  <p><%= link_to "Add a new Cocktail", new_cocktail_path %></p>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: url(<%= image_path("cocktail.jpeg")  %>);">

          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
            <p></p>
          </div>
<!--           <a class="card-link" href="#" ></a>
<  -->
        </div>
    </div>
    <% end %>
  </div>
</div>



